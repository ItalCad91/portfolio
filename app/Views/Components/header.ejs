<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
<nav style="background-color: lightslategray" class="navbar navbar-expand-lg bg-body-tertiary">
  <div style="font-size: 16px; font-weight: bold;" class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarScroll">
      <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
        <li class="nav-item">
          <a class="nav-link <%= (page == 'home') ? 'active' : '' ; %>" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (page == 'about') ? 'active' : '' ; %>" aria-current="page" href="/about">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (page == 'projects') ? 'active' : '' ; %>" aria-current="page" href="/projects">Projects</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (page == 'contact') ? 'active' : '' ; %>" aria-current="page" href="/contact">Contact Me</a>
        </li>

        <% if(displayName) { %>
          <li class="nav-item">
            <a class="nav-link <%= (page == 'contactList-list') ? 'active' : ''; %>" aria-current="page" href="/contactList-list">Contact List</a>
          </li> 
        <% } %>
      </ul>  

      <% if(displayName) { %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/logout">Logout</a>
          </li>
        </ul>
      <% } else { %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link <%= (page == 'login') ? 'active' : ''; %>" aria-current="page" href="/login">Login</a>
          </li>
        </ul>
      <% } %>      
    </div>
  </div>
</nav>
</body>
